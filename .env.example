# Environment selection: dev | test | prod
ENV=dev

# Dev settings
DEV_DATABASE_URI=sqlite:///./local.db
DEV_SECRET_KEY=change-me-in-dev
DEV_DB_FORCE_ROLL_BACK=false

# Test settings
TEST_DATABASE_URI=sqlite:///./test.db
TEST_SECRET_KEY=test-secret-key-change-in-production
TEST_DB_FORCE_ROLL_BACK=true

# Prod settings (prefer DATABASE_URI or DATABASE_URL for cloud providers)
PROD_DATABASE_URI=postgresql://user:password@host:5432/database
PROD_SECRET_KEY=change-me-in-prod
PROD_DB_FORCE_ROLL_BACK=false

# Shared optional settings (Mail kept for backward compatibility)
PROD_MAIL_USERNAME=
PROD_MAIL_PASSWORD=
PROD_MAIL_FROM=
PROD_MAIL_FROM_NAME=Matrix.net
PROD_MAIL_API_TOKEN=

# Backblaze B2 (per environment)
DEV_B2_KEY_ID=
DEV_B2_APPLICATION_KEY=
DEV_B2_BUCKET_NAME=

TEST_B2_KEY_ID=
TEST_B2_APPLICATION_KEY=
TEST_B2_BUCKET_NAME=

PROD_B2_KEY_ID=
PROD_B2_APPLICATION_KEY=
PROD_B2_BUCKET_NAME=

# Sentry
DEV_SENTRY_DSN=
TEST_SENTRY_DSN=
PROD_SENTRY_DSN=
